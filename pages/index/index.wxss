/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wapper{
   display: flex;
   flex-direction: column;
}

.userinfo-avatar {
  width: 106rpx;
  height: 94rpx;
  margin: 40rpx;
  /*border-radius: 50%;*/
}
.userinfo-title{
	display: block;
	font-size: 14px;
	color:#666;
	margin:20px 0 0 20px;
}

.userinfo-nickname {
  color: #666;
}


.map{
	position: absolute;
	left: 0;
	bottom: 0;
	display: block;
	width: 100%;
	text-align: center;
	font-size: 14px;
	color:#999;
	margin-bottom: 50px;
}

.yuan{
	position: relative;
	display: inline-block;
	width: 120px;
	height: 120px;
	background: #eeeeee;
	font-size: 16px;
	color:#666;
	border-radius: 50%;
}

.nei{
	position: absolute;
	left: 10px;
	bottom: 10px;
	display: inline-block;
	width: 100px;
	height: 100px;
	border-radius: 50%;
	background: #fff;
	line-height: 100px;
	text-align: center;
}
